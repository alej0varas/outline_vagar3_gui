#:kivy 1.0.9

<SG@GridLayout>:
    cols: 2

    Label:
        text: 'Resolution(RES)'
    Spinner:
        id: res
        values: app.res_values.keys()

    Label:
        text: 'Bitrate(BR)'
    Spinner:
        id: br
        values: app.br_values.keys()

    Label:
        text: 'Exposure(EV)' + ' ' + str(int(ev.value))
    Slider:
        id: ev
        min: -4
        max: 4
        value: 0
        step: 1

    Label:
        text: 'Sharpness(SHRP)' + ' ' + str(int(shrp.value))
    Slider:
        id: shrp
        min: 1
        max: 5
        step: 1

    Label:
        text: 'Auto Exposure(AE)'
    Spinner:
        id: ae
        values: app.ae_values.keys()

    Label:
        text: 'Contrast(CTST)' + ' ' + str(int(ctst.value))
    Slider:
        id: ctst
        min: 1
        max: 255
        step: 1

    Label:
        text: 'Microphone Gain(MIC)' + ' ' + str(int(mic.value)) + 'dB'
    Slider:
        id: mic
        min: 0
        max: 59
        step: 1

    Label:
        text: 'Silent Mode(SILENT)'
    Switch:
        id: silent

    Label:
        text: 'Lasers(LSR)'
    Switch:
        id: lsr

    Label:
        text: 'LED Indicator(LED)'
    Switch:
        id: led

    Label:
        text: 'AWB mode(AWB)'
    Spinner:
        id: awb
        values: app.awb_values.keys()

<Controller>:
    switch1: switch1
    switch2: switch2

    BoxLayout:

        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'SWITCH_1'
                    size_hint: (1, .05)

                SG:
                    id: switch1

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'SWITCH_2'
                    size_hint: (1, .05)

                SG:
                    id: switch2

        GridLayout:
            cols: 2
            size_hint: (1, .3)

            Label:
                text: 'UPDATE'
            Switch:
                id: update

            Label:
                text: 'UPDATE_FW'
            Switch:
                id: update_fw

            Label:
                text: 'FPS'
            Spinner:
                id: fps
                values: app.fps_values.keys()

            Label:
                text: 'Camera name'
            TextInput:
                id: camera_name

            Label:
                text: 'Date and Time'
            TextInput:
                id: dt

            Label:
                text: 'DCF File Prefix'
            TextInput:
                id: dcf_prefix

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)

            Button:
                text: 'Cancel'
                on_press: root.do_cancel()

            Button:
                text: 'Save'
                on_press: root.do_ok()